{{!
    @template forumngfeature_merge/modal

    Modal to manage a link within the Tiny Editor.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:

    Example context (json):
    {
    }
}}
{{< core/modal }}
    {{$classes}}merging-modal{{/classes}}
    {{$title}}
        {{#str}} merginginstructions, forumngfeature_merge {{/str}}
    {{/title}}

    {{$body}}
        <form class="mform" id="{{uniqid}}" method="post">
            <div class="form-control-static ">
                {{#str}} mergeinfo, forumngfeature_merge {{/str}}
            </div>

            <div class="form-check">
                <input type="checkbox" name="hidelater" class="form-check-input " value="1" id="id_hidelater">
                <label for="id_hidelater" class="checkbox-label">{{#str}} hidelater, forumng {{/str}}</label>
            </div>

        </form>
    {{/body}}

    {{$footer}}
        <input type="submit" class="btn btn-primary" name="submitbutton" data-action="save" id="id_submitbutton" value="{{#str}} beginmerge, forumngfeature_merge {{/str}}">
        <button type="button" class="btn btn-secondary" data-action="cancel">{{#str}} cancel {{/str}}</button>
    {{/footer}}
{{/ core/modal }}
